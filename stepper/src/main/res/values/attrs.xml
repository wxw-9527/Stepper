<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Stepper">
        <!-- 数据类型 -->
        <attr name="stepper_data_element" format="enum">
            <enum name="FLOAT" value="0" />
            <enum name="INT" value="1" />
        </attr>
        <!-- 保留小数位（仅数据类型为浮点型时生效） -->
        <attr name="stepper_digits" format="integer" />

        <!-- 是否隐藏按钮 -->
        <attr name="stepper_hide_button" format="boolean" />

        <!-- 左侧按钮背景 -->
        <attr name="stepper_left_button_background" format="reference" />
        <!-- 右侧按钮背景 -->
        <attr name="stepper_right_button_background" format="reference" />
        <!-- 输入框背景 -->
        <attr name="stepper_input_background" format="color|reference" />
        <!-- 输入框文字大小 -->
        <attr name="stepper_input_text_size" format="dimension" />
        <!-- 输入框文字颜色 -->
        <attr name="stepper_input_text_color" format="color|reference" />
        <!-- 输入框是否允许点击 -->
        <attr name="stepper_input_clickable" format="boolean" />

        <!-- 按钮尺寸 -->
        <attr name="stepper_button_size" format="dimension" />
        <!-- 输入框宽 -->
        <attr name="stepper_input_width" format="dimension" />
        <!-- 输入框高 -->
        <attr name="stepper_input_height" format="dimension" />
        <!-- 按钮与输入框之间的间距 -->
        <attr name="stepper_padding_input_button" format="dimension" />
    </declare-styleable>

    <declare-styleable name="NumberInputEdittext">
        <!-- 数据类型 -->
        <attr name="input_data_element" format="enum">
            <enum name="FLOAT" value="0" />
            <enum name="INT" value="1" />
        </attr>
        <!-- 保留小数位（仅数据类型为浮点型时生效） -->
        <attr name="input_digits" format="integer" />
    </declare-styleable>
</resources>